<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".MainActivity">

    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/try_to_guess"
            tools:layout_editor_absoluteX="122dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="356dp"/>
    <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="OnClick_exit"
            app:srcCompat="@android:drawable/ic_delete"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="84dp"/>
    <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="number" tools:layout_editor_absoluteX="0dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="300dp"/>
    <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/input_value"
            tools:layout_editor_absoluteX="0dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="244dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>